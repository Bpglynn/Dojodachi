@model Pet
<div class="bg-light rounded px-auto">
    <h5 class="text-center">
        <span class="text-primary">Fullness:</span> @Model.Fullness
        <span class="text-primary">  |  Happiness:</span> @Model.Happiness
        <span class="text-primary">  |  Meal Count:</span> @Model.Meals
        <span class="text-primary">  |  Energy:</span> @Model.Energy
    </h5>
</div>
<div class="col px-2 py-2 text-center">
    <div class="mx-auto my-2 rounded">
        <img src="images/@Model.imageState" class="fluid">
    </div>
    <div class="border rounded mx-auto my-1 px-2 py-2" style="max-height: 200px; overflow-y: scroll;">
        <h5>Action History</h5>
        @foreach(var action in Model.ActionHistory) {
            <p class="my-1 py-0">@action</p>
        }
    </div>
</div>